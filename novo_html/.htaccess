RewriteRule ^sobre\/?$ sobre.php

RewriteRule ^produtos\/?$ produtos.php
RewriteRule ^produtos\/([a-zA-Z\-0-9]+)\/?$ produtos-leitura.php?code=$1
RewriteRule ^produtos\/pagina\/([0-9]+)\/?$ produtos.php?pagina=$1

RewriteRule ^servicos\/?$ servicos.php
RewriteRule ^servicos\/([a-zA-Z\-0-9]+)\/?$ servicos-leitura.php?code=$1
RewriteRule ^servicos\/pagina\/([0-9]+)\/?$ servicos.php?pagina=$1

RewriteRule ^noticias\/?$ noticias.php
RewriteRule ^noticias\/([a-zA-Z\-0-9]+)\/?$ noticias-leitura.php?code=$1
RewriteRule ^noticias\/pagina\/([0-9]+)\/?$ noticias.php?pagina=$1

RewriteRule ^atendimento\/?$ atendimento.php
RewriteRule ^contato\/?$ contato.php
RewriteRule ^fale-conosco\/?$ fale-conosco.php



ErrorDocument 404 /404.php